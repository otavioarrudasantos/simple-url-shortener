{{#if msg}}
<div class="alert alert-warning">{{msg}}</div>
{{/if}}
    <div class="row" >
        <div class="col-md-6 col-md-offset-3" >
            <h1>Encurte sua URL</h1>
            <form action="/url/shorten" method="POST">
                <div class="form-group">
                    <input class="form-control" name="long-url" type="text" placeholder="URL"/>
                </div>
                <button type="submit" class="btn btn-primary">Encurtar</button>
                <a class="btn" href="/url">Listar URLS</a>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class='table table-bordered table-stripped'>
                <thead></thead>
                <tbody>
                    {{#each urls}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td><a href='/url/redirect/{{this.short_url}}'>{{this.short_url}}</a></td>
                            <td><a href='{{this.long_url}}'>{{this.long_url}}</a></td>

                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
